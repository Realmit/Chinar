<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Chinar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maincolorred</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maincolorred</item>
        <item name="colorSecondaryVariant">@color/maincolorred</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Customization -->
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/maincolorred</item>
        <item name="android:textColor">@color/background</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:checkMark">@drawable/abc_btn_radio_material</item>
    </style>
</resources>