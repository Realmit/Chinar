<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">
    <!-- 3Д обзор зала -->
    <Button
        android:id="@+id/button3dView"
        android:layout_width="226dp"
        android:layout_height="226dp"
        android:text="3D ОБЗОР ЗАЛА"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"  />
    <!-- Информация о сотрудниках кафе -->
    <Button
        android:id="@+id/buttonAboutUs"
        android:layout_width="226dp"
        android:layout_height="113dp"
        android:text="НАШИ СОТРУДНИКИ"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/button3dView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"  />
    <Button
        android:id="@+id/buttonOpt3"
        android:layout_width="226dp"
        android:layout_height="113dp"
        android:text="a???"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAboutUs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"  />
    <Button
        android:id="@+id/buttonOpt4"
        android:layout_width="226dp"
        android:layout_height="113dp"
        android:text="a???"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonOpt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"  />

    <!-- Кнопка "Назад" -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>