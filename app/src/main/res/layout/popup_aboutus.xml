<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="О НАС"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Café Main Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cafe_outside"
                    android:layout_marginBottom="16dp" />

                <!-- Brief History Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="История создания"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="«Чинар» был основан в 2018 году с простой мечтой — создать место, где каждый гость чувствует себя как дома. За эти годы мы превратили скромное кафе в один из самых уютных банкетных залов Барнаула, сохраняя при этом тёплую атмосферу и индивидуальный подход к каждому событию."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Название «Чинар» (платан) символизирует долголетие, силу и единство — качества, которые мы стремимся воплотить в каждом нашем мероприятии."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>

                <!-- Mission & Values -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Наша миссия"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Создавать незабываемые моменты для наших гостей, сочетая традиционное гостеприимство с современным сервисом. Мы верим, что каждое событие уникально и заслуживает особого внимания."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>

                <!-- Team Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Наша команда"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Team Member 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/default_icon"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Менеджер события" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Анна Петрова"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Менеджер мероприятий"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Более 5 лет опыта в организации торжественных событий. Специализируется на свадьбах и корпоративах."
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="#888888" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Team Member 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/default_icon"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Шеф-повар" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Дмитрий Сидоров"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Шеф-повар"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Обучался в лучших кулинарных школах России. Создает авторские блюда, сочетающие традиции и инновации."
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="#888888" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Team Member 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/default_icon"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Декоратор" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Елена Козлова"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Художественный декоратор"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Художник по образованию. Разрабатывает уникальные концепции оформления для каждого мероприятия."
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="#888888" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Facilities -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Наши возможности"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Features Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="4"
                        android:useDefaultMargins="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:drawableStart="@drawable/default_icon_small"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Вместимость до 50 человек"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:drawableStart="@drawable/default_icon_small"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Полный кейтеринг"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:drawableStart="@drawable/default_icon_small"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Звуковое оборудование"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:drawableStart="@drawable/default_icon_small"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Профессиональное оформление"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:drawableStart="@drawable/default_icon_small"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Бесплатная парковка"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:drawableStart="@drawable/default_icon_small"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Доступно для людей с ОВЗ"
                            android:textSize="14sp" />
                    </GridLayout>
                </LinearLayout>

                <!-- Contact Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Контактная информация"

                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="#F8F9FA"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Адрес:"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ул. Сухэ-Батора, 17, Барнаул"

                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Телефон:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+7 (3852) XXX-XX-XX"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Режим работы:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ежедневно с 12:00 до 24:00"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Close Button -->
        <Button
            android:id="@+id/buttonClosePopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Закрыть"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>