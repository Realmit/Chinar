<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:contentDescription="Cafe Chinar Logo"
        android:src="@drawable/baseline_sip_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КАФЕ ЧИНАР"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonGoToMenu"
        android:layout_width="226dp"
        android:layout_height="120dp"
        android:text="МЕНЮ" />

    <Button
        android:id="@+id/buttonGoToOrder"
        android:layout_width="226dp"
        android:layout_height="120dp"
        android:text="ЗАКАЗАТЬ" />

    <Button
        android:id="@+id/buttonGoToReviews"
        android:layout_width="226dp"
        android:layout_height="120dp"
        android:text="ОТЗЫВЫ" />

    <Button
        android:id="@+id/buttonGoToCafe"
        android:layout_width="226dp"
        android:layout_height="120dp"
        android:text="КАФЕ" />

</LinearLayout>