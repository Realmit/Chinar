<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Item Title"
            android:textSize="22sp"
            android:textStyle="bold" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dialogImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:contentDescription="Item Icon" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="16dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dialogDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:text="Полное описание"
                    android:textSize="16sp"
                    android:paddingRight="10dp" />
            </ScrollView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-8dp"
            android:text="В порции"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <!-- Nutrition table -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:columnCount="5"
            android:rowCount="2"
            android:useDefaultMargins="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Масса\n(г)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Калории\n(ккал)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Белки\n(г)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Жиры\n(г)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Углев.\n(г)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Values -->
            <TextView
                android:id="@+id/dialogMass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/dialogCalories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dialogProtein"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/dialogFat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/dialogCarbs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />
        </GridLayout>
        <TextView
            android:id="@+id/dialogPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="0.00₽"
            android:textColor="@color/maincolorred"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/buttonClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Закрыть"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>